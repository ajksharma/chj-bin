#!/bin/bash

set -eu

usage () {
    echo "usage: $0 base onto"
    echo "  move commits \$base..HEAD onto \$onto"
    echo "  and check out \$onto"
    exit 1
}

if [ $# -ne 2 ]; then
	usage
fi

base="$1"
onto="$2"

randomname=tmp_`head -c 4 /dev/urandom|md5sum|printfield 1`

git checkout -b "$randomname"
git rebase --onto "$2" "$1"

git checkout "$onto"
