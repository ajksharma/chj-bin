#!/bin/bash

set -eu

usage () {
    echo "$0 start|stop"
    exit 1
}

if [ $# -ne 1 ]; then
    usage
fi

PATH=/opt/chj/ssh-config-gen/:"$PATH"

infile=/etc/hosts-in
outfile=/etc/hosts

if [ -f "$infile" -a -f "$outfile" ]; then

    case "$1" in
	start)
	filter_file "$infile"|cpp -Dmode_concentrate=1 > "$outfile"
	;;
	stop)
	filter_file "$infile"|cpp -Dmode_concentrate=0 > "$outfile"
	;;
	*)
	usage
	;;
    esac
else
    echo "missing '$infile' or '$outfile'"
    exit 1
fi

